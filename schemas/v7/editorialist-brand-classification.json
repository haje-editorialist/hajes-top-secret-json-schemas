{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Editorialist Brand Classification",
  "description": "Schema for categorizing fashion brands and estimating Editorialist stylist preference",
  "type": "object",
  "required": [
    "brand",
    "categories",
    "preference",
    "certainty_score",
    "notes"
  ],
  "properties": {
    "brand": {
      "type": "string",
      "description": "Input brand name as provided by the user",
      "minLength": 1,
      "maxLength": 200
    },
    "categories": {
      "type": "array",
      "description": "Product categories the brand produces",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "Watches",
          "Jewelry",
          "Shoes",
          "Clothing",
          "Bags",
          "Beauty",
          "Eyewear",
          "Fragrance",
          "Accessories",
          "Swimwear",
          "Homeware",
          "Lingerie",
          "Other"
        ]
      }
    },
    "preference": {
      "type": "string",
      "description": "Estimated Editorialist stylist preference",
      "enum": [
        "Strong preference",
        "Preference",
        "Neutral",
        "Avoid",
        "Strong avoid"
      ]
    },
    "certainty_score": {
      "type": "integer",
      "description": "Certainty score from 0 (no confidence) to 100 (high confidence)",
      "minimum": 0,
      "maximum": 100
    },
    "notes": {
      "type": "string",
      "description": "Brief notes only if there is uncertainty about category or preference; otherwise empty string",
      "maxLength": 500
    }
  },
  "additionalProperties": false
}
